# Production Environment Variables
BACKEND_PORT=3001
NODE_ENV=production

# Database - Use strong credentials
DATABASE_HOST=your_prod_db_host
DATABASE_PORT=5432
DATABASE_NAME=african_currency
DATABASE_USER=prod_user
DATABASE_PASSWORD=your_strong_password_here
DATABASE_URL=postgresql://prod_user:your_strong_password_here@your_prod_db_host:5432/african_currency

# JWT - Use strong secret
JWT_SECRET=your_production_jwt_secret_key_min_32_chars
JWT_EXPIRATION=7d

# Stellar - Production Network
STELLAR_NETWORK=public
STELLAR_HORIZON_URL=https://horizon.stellar.org
STELLAR_SIGNING_KEY=your_production_signing_key
STELLAR_PUBLIC_KEY=your_production_public_key

# External APIs
EXCHANGE_RATE_API_KEY=your_production_api_key
GOLD_PRICE_API_KEY=your_production_api_key
NEWS_API_KEY=your_production_api_key

# Email Service
SMTP_HOST=your_email_provider_host
SMTP_PORT=587
SMTP_USER=your_email@provider.com
SMTP_PASSWORD=your_email_password
SENDER_EMAIL=noreply@africancurrency.com

# Frontend
FRONTEND_URL=https://yourdomain.com

# CORS
CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=info

# Security
BCRYPT_ROUNDS=12
